
rule cc
  command = $cc $cflags $defs $warn $incdirs $sysincdirs -MMD -MF $out.d -c $in -o $out
  description = C++ ($in)
  depfile = $out.d

rule cxx
  command = $cxx $cflags $cxxflags $defs $warn $incdirs $sysincdirs -MMD -MF $out.d -c $in -o $out
  description = C++ ($in)
  depfile = $out.d

rule exe
  command = $ld $rpath $ldflags $in $libs -o $out $io_redirect
  description = Linking ($out)

rule lib
  command = rm -f $out ; $ar $arflags cur $out $in
  description = Static ($out)
